<%- include('../partials/header.ejs')%>
<div class = "content">
    <form method="POST" action="/connections/<%= connection.id%>?_method=PUT">
        <table>
           

           
                <tr>
                    <td><label for="name">Name</label></td>
                    <td><input type="text" id="name" name="name" value = "<%= connection.name%>" class = "fixed-width"></td>
                </tr>
                <tr>
                    <td><label for="topic">Topic</label></td>
                    <td><input type="text" id="topic" name="topic" value = "<%= connection.topic%>" class = "fixed-width"></td>
                </tr>
                <tr>
                    <td class = "align-top"><label for="details">Details</label></td>
                    <td><textarea rows="5" id="details" name="details" class = "fixed-width"><%= connection.details%></textarea></td>
                </tr>
                <tr>
                    <td class = "align-top"><label for="date">Date</label></td>
                    <td><input type="date" id="date" name="date" value = "<%= connection.date%>" class = "fixed-width"></td>
                </tr>
                <tr>
                    <td class = "align-top"><label for="start_time">Start Time</label></td>
                    <td><input type="time" id="start_time" name="start_time" value = "<%= connection.start_time%>"  class = "fixed-width"></td>
                </tr>
                <tr>
                    <td class = "align-top"><label for="end_time">End Time</label></td>
                    <td><input type="time" id="end_time" name="end_time" value = "<%= connection.end_time%>" class = "fixed-width"></td>
                </tr>
                <tr>
                    <td class = "align-top"><label for="host_name">Host Name</label></td>
                    <td><input type="text" id="host_name" name="host_name" value = "<%= connection.host_name%>"  class = "fixed-width"></td>
                </tr>
                <tr>
                    <td class = "align-top"><label for="image">Image</label></td>
                    <td><textarea rows="5" id="image" name="image" value = "<%= connection.image%>" class = "fixed-width"><%= connection.image%></textarea></td>
                </tr>
              
                <tr>
                    <td colspan="2" class = "align-right"><button class=" button createLesson" >Submit Lesson Changes</button></td>
                </tr>
           
            </table>    
            
            


            
    </form>

    </div>
    <%- include('../partials/footer.ejs')%>
