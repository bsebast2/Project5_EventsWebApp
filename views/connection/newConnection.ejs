<%-include('../partials/header.ejs')%>

<h2 class="newConnectionHeader">Create a New Music Lesson</h2>

    <h2>Welcome <%=user%> </h2>


    <div class = "content">
        <form action = '/connections' method = 'POST'>
            <table>
                <tr>
                    <td><label for="name">Name</label></td>
                    <td><input type="text" id="name" name="name" class = "fixed-width"></td>
                </tr>
                <tr>
                    <td><label for="topic">Topic</label></td>
                    <td><input type="text" id="topic" name="topic" class = "fixed-width"></td>
                </tr>
                <tr>
                    <td class = "align-top"><label for="details">Details</label></td>
                    <td><textarea rows="5" id="details" name="details" class = "fixed-width"></textarea></td>
                </tr>
                <tr>
                    <td class = "align-top"><label for="date">Date</label></td>
                    <td><input type="date" id="date" name="date" class = "fixed-width"></td>
                </tr>
                <tr>
                    <td class = "align-top"><label for="start_time">Start Time</label></td>
                    <td><input type="time" id="start_time" name="start_time" class = "fixed-width"></td>
                </tr>
                <tr>
                    <td class = "align-top"><label for="end_time">End Time</label></td>
                    <td><input type="time" id="end_time" name="end_time" class = "fixed-width"></td>
                </tr>
                <tr>
                    <td class = "align-top"><label for="host_name">Host Name</label></td>
                    <td><input type="text" id="host_name" name="host_name" class = "fixed-width"></td>
                </tr>
                <tr>
                    <td class = "align-top"><label for="image">Image</label></td>
                    <td><textarea rows="5" id="image" name="image" class = "fixed-width"></textarea></td>
                </tr>
                <tr>
                    <td class = "align-top"><label for="createdAt">createdAt</label></td>
                    <td><input type="date" id="createdAt" name="createdAt" class = "fixed-width"></td>
                </tr>
                <tr>
                    <td colspan="2" class = "align-right"><button class=" button createLesson" >Create New Lesson</button></td>
                </tr>
            </table>        
        </form>
    
        </div>

<%-include('../partials/footer.ejs')%>